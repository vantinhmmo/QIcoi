<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/default_color</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:alertDialogTheme">@style/ThemeAlert</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="ThemeAlert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- This one changes buttons text color -->
        <item name="android:background">#ffffff</item>
    </style>

    <!--&lt;!&ndash; Base application theme. &ndash;&gt;-->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--<item name="android:textColor">#000000</item>-->
    <!--</style>-->

    <style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:fontFamily">@font/font_resource</item>-->
        <item name="android:textSize">14dp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14dp</item>
        <!--<item name="android:fontFamily">@font/font_resource</item>-->
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/mydivider</item>
    </style>

</resources>



